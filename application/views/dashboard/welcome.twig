{% extends "dashboard/base.twig" %}

{% block content %}
<div class="row">
            <div class="col-lg-4 col-xs-6">
              <!-- small box -->
              <div class="small-box bg-red">
                <div class="inner">
                  <h3 style="font-size: 25px;">Rp {{ total_zakat_maal }},-</h3>
                  <p>Zakat Maal</p>
                </div>
                <div class="icon">
                  <i class="ion ion-bag"></i>
                </div>
                 <a style="color:black;" href="{{ site_url() }}/dashboard/personal_info/maal/{{ active_user_id }}/{{ "now"|date("Y") }}" class="col-lg-6 small-box-footer">Info <i class="fa fa-pie-chart"></i></a>
                <a  style="color:black;"href="{{ site_url() }}/dashboard/personal_pay_maal/{{ active_user_id }}/" class="col-lg-6 small-box-footer">Bayar <i class="fa fa-plus-square-o"></i></a>
               </div>
            </div><!-- ./col -->
            <div class="col-lg-4 col-xs-6">
              <!-- small box -->
              <div class="small-box bg-aqua">
                <div class="inner">
                  <h3  style="font-size: 25px;">Rp {{ total_zakat_fitrah|number_format(0,",",".") }},-</h3>
                  <p>Zakat Fitrah</p>
                </div>
                <div class="icon">
                  <i class="ion ion-stats-bars"></i>
                </div>
                 <a  style="color:black;" href="{{ site_url() }}/dashboard/personal_info/fitrah/1/{{ "now"|date("Y") }}" class="col-lg-6 small-box-footer">Info <i class="fa fa-pie-chart"></i></a>
                <a  style="color:black;" href="{{ site_url() }}/dashboard/personal_pay_fitrah/{{ active_user_id }}/" class="col-lg-6 small-box-footer">Bayar <i class="fa fa-plus-square-o"></i></a>
              </div>
            </div><!-- ./col -->
            <div class="col-lg-4 col-xs-6">
              <!-- small box -->
              <div class="small-box bg-green">
                <div class="inner">
                  <h3  style="font-size: 25px;">Rp {{ total_zakat_profesi }},-</h3>
                  <p>Zakat Profesi</p>
                </div>
                <div class="icon">
                  <i class="ion ion-person-add"></i>
                </div>
                <a  style="color:black;" href="{{ site_url() }}/dashboard/personal_info/profesi/1/{{ "now"|date("Y") }}" class="col-lg-6 small-box-footer">Info <i class="fa fa-pie-chart"></i></a>
                <a  style="color:black;" href="{{ site_url() }}/dashboard/personal_pay_profesi/{{ active_user_id }}/" class="col-lg-6 small-box-footer">Bayar <i class="fa fa-arrow-circle-right"></i></a>
              </div>
            </div>
          </div>
{% endblock %}